'isredit macro'

'isredit (ROW, COL) = cursor'
'isredit (WIDTH)    = data_width'
if (ROW<1) | (COL<1) | (COL>WIDTH) then
  call fatalerr cursor not in text, cursor must be positioned in text to perform box

'ispexec vget BASEROW BASECOL LASTPF48 ZPF48'

if (BASEROW='') then
  do
    BASEROW  = ROW+0
    BASECOL  = COL+0
    LASTPF48 = ZPF48
    ZPF48    = 'BOX'
    'ispexec vput BASEROW BASECOL LASTPF48 ZPF48'
    call dispmsg position lr corner and hit PF48, move the cursor to the lower right corner and hit PF48
  end
else
  do
    if (ROW<BASEROW) | (COL<BASECOL) then
      call fatalerr lower right corner please, position cursor in the lower right corner of box and hit PF48
    else
      do
        call dblbox BASEROW BASECOL ROW+0 COL+0
        BASEROW  = ''
        BASECOL  = ''
        ZPF48    = LASTPF48
        LASTPF48 = ''
        'ispexec vput BASEROW BASECOL LASTPF48 ZPF48'
      end
  end

'ispexec vget BASEROW BASECOL LASTPF48 ZPF48'

exit 0

dblbox:
arg BASEROW BASECOL DESTROW DESTCOL

  'isredit label 'BASEROW' = .top'
  'isredit label 'DESTROW' = .bott'

  x = DESTCOL-BASECOL
  y = DESTROW-BASEROW

  if (y>0) then
    do
      'isredit change p"=" อ .top  .top  all 'BASECOL+1' 'DESTCOL-1
      if (x>0) then
        'isredit change p"=" อ .bott .bott all 'BASECOL+1' 'DESTCOL-1
    end

  if (x>1) then
    do
      'isredit change p"=" อ .bott .bott all 'BASECOL+1' 'DESTCOL-1
      'isredit change p"=" บ .top .bott all 'BASECOL' 'BASECOL
      'isredit change p"=" บ .top .bott all 'DESTCOL' 'DESTCOL
    end

  if (x>1) & (y>0) then
    do
      'isredit change p"=" ษ .top .top   all 'BASECOL' 'BASECOL
      'isredit change p"=" ป .top .top   all 'DESTCOL' 'DESTCOL
      'isredit change p"=" ศ .bott .bott all 'BASECOL' 'BASECOL
      'isredit change p"=" ผ .bott .bott all 'DESTCOL' 'DESTCOL
    end

  'isredit reset chg .top .bott'

return 0

fatalerr:
arg mvar

  call dispmsg mvar

exit -1

dispmsg:
arg ZEDSMSG, ZEDLMSG

  'ISPEXEC SETMSG MSG(ISRZ000)'

return 0
